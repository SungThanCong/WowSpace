
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    .announcement {
        min-width: 200px;
        max-width: 400px;
        padding: 8px 30px;
        border-radius: 5px;
        transition: 0.5s;
        animation-name: announcement-anim;
        animation-duration: 1.5s;
        animation-fill-mode: forwards;
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 100000;
        position: fixed;
        top: 1.5vh;
        left: 0;
        right: 0;
        margin: auto;
        border: none;
    }

        .announcement h3 {
            font-size: 1em;
        }

    .announ-success {
        background-color: #b0d4b8;
    }

    .announ-failed {
        background-color: #f28076;
    }

    .active {
        display: flex;
    }

    .unactive {
        display: none;
    }

    @@keyframes announcement-anim {
        0% {
            transform: translateY(50px);
            opacity: 0;
        }

        20% {
            transform: translateY(0);
            opacity: 1;
        }

        80% {
            transform: translateY(0);
            opacity: 1;
        }

        100% {
            transform: translateY(-50px);
            opacity: 0;
        }
    }
</style>

<div class="announcement announ-success">
    <h3>

        @ViewData["successMes"]
    </h3>
</div>
<div class="announcement announ-failed">
    <h3>
        @ViewData["failMes"]

    </h3>
</div>

